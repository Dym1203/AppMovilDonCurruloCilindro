<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recoverpassword"
    tools:context=".ui.RecoverPasswordActivity">

    <LinearLayout
        android:id="@+id/linearParte6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:text="Correo Electrónico"
            android:textAlignment="textStart"
            android:fontFamily="@font/cabin_bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCorreoCliente"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="35dp"
            app:startIconDrawable="@drawable/email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietCorreoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BAFFFFFF"
                android:fontFamily="@font/cabin"
                android:inputType="textEmailAddress"
                android:textSize="15sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="10dp"
            android:text="Nueva Contraseña"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:fontFamily="@font/cabin_bold"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNuevaClave"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="35dp"
            app:passwordToggleEnabled="true"
            app:startIconDrawable="@drawable/icon_clave">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietNuevaClave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B9FFFFFF"
                android:fontFamily="@font/cabin"
                android:inputType="textPassword"
                android:textSize="15sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="@string/caracteres"
            android:textAlignment="textStart"
            android:fontFamily="@font/cabin"
            android:textColor="#700909"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="10dp"
            android:text="Confirmar Contraseña"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:fontFamily="@font/cabin_bold"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilConfirmarClave"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="35dp"
            app:passwordToggleEnabled="true"
            app:startIconDrawable="@drawable/baseline_check_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietConfirmarClave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B9FFFFFF"
                android:fontFamily="@font/cabin"
                android:inputType="textPassword"
                android:textSize="15sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearParte7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearParte6"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#922A2A"
            android:drawableTint="#fff"
            android:text="Cancelar"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12dp"
            android:textStyle="bold"
            app:cornerRadius="16sp" />

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="#922A2A"
            android:drawableTint="#fff"
            android:text="Aceptar"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12dp"
            android:textStyle="bold"
            app:cornerRadius="16sp" />

    </LinearLayout>

</RelativeLayout>